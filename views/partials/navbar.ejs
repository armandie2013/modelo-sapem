<nav class="bg-blue-800 text-white py-4 px-6 relative z-50">
  <div class="container mx-auto flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="text-lg font-semibold">Catamarca Telecomunicaciones SAPEM</a>

    <!-- Botón hamburguesa -->
    <button id="menu-toggle" class="md:hidden focus:outline-none">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Menú -->
    <div id="menu"
      class="hidden md:flex flex-col md:flex-row md:items-center md:space-x-6 absolute md:static top-full left-0 w-full md:w-auto bg-blue-800 md:bg-transparent z-40 px-4 md:px-0 py-4 md:py-0 space-y-4 md:space-y-0">
      <% if (usuario && usuario.rol) { %>
        <ul class="flex flex-col md:flex-row md:space-x-6">
          <li><a href="/viaticos/dashboard" class="hover:underline">Dashboard Viáticos</a></li>
          <li><a href="/viaticos/crear" class="hover:underline">Crear Viático</a></li>
          <li><a href="/stock" class="hover:underline">Control de Stock</a></li>
          <% if (usuario.rol==='admin' ) { %>
            <li class="relative group">
              <button id="toggleDropdown" class="hover:underline focus:outline-none">Acceso ▾</button>
              <ul id="dropdownMenu"
                class="hidden group-hover:block absolute md:absolute bg-white text-black rounded-lg shadow-lg mt-2 w-56 z-50">
                <li><a href="/personas/dashboard" class="block px-4 py-2 hover:bg-gray-200">Personal SAPEM</a></li>
                <li><a href="/usuarios/dashboard" class="block px-4 py-2 hover:bg-gray-200">Usuarios Registrados</a>
                </li>
              </ul>
            </li>
            <% } %>
        </ul>
        <!-- Botón cerrar sesión -->
        <form action="/logout" method="POST" class="mt-4 md:mt-0 md:ml-4">
          <button class="bg-red-600 px-3 py-1 rounded hover:bg-red-800">Cerrar sesión</button>
        </form>
        <% } else { %>
          <ul class="flex flex-col md:flex-row md:space-x-6">
            <% if (rutaActual==="/registro" ) { %>
              <li><a href="/login" class="hover:underline">Iniciar sesión</a></li>
              <% } else if (rutaActual==="/login" ) { %>
                <li><a href="/registro" class="hover:underline">Registrarse</a></li>
                <% } else { %>
                  <li><a href="/login" class="hover:underline">Iniciar sesión</a></li>
                  <li><a href="/registro" class="hover:underline">Registrarse</a></li>
                  <% } %>
          </ul>
          <% } %>
    </div>
  </div>
</nav>

<!-- Script para menú toggle -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuToggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("menu");

    menuToggle?.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  });
</script>

<!-- Script para abrir/cerrar el dropdown al hacer clic -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleBtn = document.getElementById("toggleDropdown");
    const dropdown = document.getElementById("dropdownMenu");

    if (toggleBtn && dropdown) {
      toggleBtn.addEventListener("click", () => {
        dropdown.classList.toggle("hidden");
      });

      // Cerrar dropdown si se hace clic fuera
      document.addEventListener("click", function (e) {
        if (!toggleBtn.contains(e.target) && !dropdown.contains(e.target)) {
          dropdown.classList.add("hidden");
        }
      });
    }
  });
</script>