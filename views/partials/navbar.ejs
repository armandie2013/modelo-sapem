<nav class="bg-blue-800 text-white py-4 px-6 relative z-50">
  <div class="container mx-auto flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="text-xl text-base">Catamarca Telecomunicaciones SAPEM</a>

    <% if (usuario && usuario.rol) { %>
      <!-- Navbar para usuarios autenticados -->
      <ul class="flex space-x-6 items-center">
        <li><a href="/viaticos/dashboard" class="hover:underline">Dashboard Viáticos</a></li>
        <li><a href="/viaticos/crear" class="hover:underline">Crear Viático</a></li>
        <li><a href="/stock" class="hover:underline">Control de Stock</a></li>

        <% if (usuario.rol==='admin' ) { %>
          <li class="relative">
            <button id="toggleDropdown" class="hover:underline focus:outline-none">Acceso ▾</button>
            <ul id="dropdownMenu"
              class="absolute right-0 top-full mt-2 w-56 bg-white text-black rounded-lg shadow-lg hidden z-50">
              <li><a href="/personas/dashboard" class="block px-4 py-2 hover:bg-gray-200">Personal SAPEM</a></li>
              <li><a href="/usuarios/dashboard" class="block px-4 py-2 hover:bg-gray-200">Usuarios Registrados</a></li>
            </ul>
          </li>
          <% } %>
      </ul>

      <!-- Botón cerrar sesión -->
      <form action="/logout" method="POST" class="ml-4">
        <button class="bg-red-600 px-3 py-1 rounded hover:bg-red-800">Cerrar sesión</button>
      </form>

      <% } else { %>
        <!-- Navbar para visitantes -->
        <ul class="flex space-x-6">
          <% if (rutaActual==="/registro" ) { %>
            <li><a href="/login" class="hover:underline">Iniciar sesión</a></li>
            <% } else if (rutaActual==="/login" ) { %>
              <li><a href="/registro" class="hover:underline">Registrarse</a></li>
              <% } else { %>
                <li><a href="/login" class="hover:underline">Iniciar sesión</a></li>
                <li><a href="/registro" class="hover:underline">Registrarse</a></li>
                <% } %>
        </ul>
        <% } %>
  </div>
</nav>

<!-- Script para abrir/cerrar el dropdown al hacer clic -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleBtn = document.getElementById("toggleDropdown");
    const dropdown = document.getElementById("dropdownMenu");

    if (toggleBtn && dropdown) {
      toggleBtn.addEventListener("click", () => {
        dropdown.classList.toggle("hidden");
      });

      // Cerrar dropdown si se hace clic fuera
      document.addEventListener("click", function (e) {
        if (!toggleBtn.contains(e.target) && !dropdown.contains(e.target)) {
          dropdown.classList.add("hidden");
        }
      });
    }
  });
</script>