<div class="bg-white max-w-6xl mx-auto p-8 rounded-2xl shadow-xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl text-gray-800">Listado de Personal</h1>
    <a href="/personas/agregar" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-800 transition">
      Agregar Personal
    </a>
  </div>

  <table class="w-full text-sm table-auto border-collapse">
    <thead class="bg-gray-100 text-left">
      <tr>
        <th class="border px-4 py-2">#</th>
        <th class="border px-4 py-2">Legajo</th>
        <th class="border px-4 py-2">Nombre y Apellido</th>
        <th class="border px-4 py-2">DNI</th>
        <th class="border px-4 py-2">Cargo</th>
        <th class="border px-4 py-2 text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% personas.forEach(p => { %>
        <tr class="border-t hover:bg-gray-50 transition">
          <td class="border px-4 py-2"><%= p.numeroOrden %></td>
          <td class="border px-4 py-2"><%= p.legajo %></td>
          <td class="border px-4 py-2"><%= p.nombreApellido %></td>
          <td class="border px-4 py-2"><%= p.dni %></td>
          <td class="border px-4 py-2"><%= p.cargo %></td>
          <td class="border px-4 py-2 text-center">
            <a href="/personas/editar/<%= p._id %>" class="text-blue-600 hover:underline mr-4">Editar</a>
            <form action="/personas/eliminar/<%= p._id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Â¿Eliminar esta persona?')">
              <button type="submit" class="text-red-600 hover:underline">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>