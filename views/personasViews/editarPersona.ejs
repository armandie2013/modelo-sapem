<div class="bg-gray-100 min-h-screen py-8 px-4">
  <form action="/personas/editar/<%= persona._id %>?_method=PUT" method="POST"
    class="max-w-7xl mx-auto bg-white p-8 rounded-2xl shadow-lg border border-gray-300 space-y-6">

    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Editar Personal</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 text-sm">

      <!-- Columna 1: Datos personales -->
      <div class="space-y-3 col-span-1">
        <div>
          <label class="block font-medium text-gray-700">N° de Orden</label>
          <input type="number" name="numeroOrden" value="<%= persona.numeroOrden %>" required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg text-xs">
        </div>
        <div>
          <label class="block font-medium text-gray-700">Legajo</label>
          <input type="text" name="legajo" value="<%= persona.legajo %>" required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg text-xs">
        </div>
        <div>
          <label class="block font-medium text-gray-700">Nombre y Apellido</label>
          <input type="text" name="nombreApellido" value="<%= persona.nombreApellido %>" required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg text-xs">
        </div>
        <div>
          <label class="block font-medium text-gray-700">DNI</label>
          <input type="text" name="dni" value="<%= persona.dni %>" required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg text-xs">
        </div>
        <div>
          <label class="block font-medium text-gray-700">Cargo</label>
          <input type="text" name="cargo" value="<%= persona.cargo %>" required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg text-xs">
        </div>
      </div>

      <!-- Columna 2: Administración -->
      <div>
        <h2 class="font-bold text-gray-800 mb-1 text-sm">Administración</h2>

        <p class="text-gray-600 font-semibold text-xs mb-1 mt-2">Proveedores</p>
        <div class="flex flex-wrap gap-x-2 gap-y-1 text-xs">
          <label><input type="checkbox" name="modulosPermitidos[proveedores][ver]" value="true"
              <%=persona.modulosPermitidos.proveedores?.ver ? "checked" : "" %>> Ver</label>
          <label><input type="checkbox" name="modulosPermitidos[proveedores][crear]" value="true"
              <%=persona.modulosPermitidos.proveedores?.crear ? "checked" : "" %>> Crear</label>
          <label><input type="checkbox" name="modulosPermitidos[proveedores][editar]" value="true"
              <%=persona.modulosPermitidos.proveedores?.editar ? "checked" : "" %>> Editar</label>
          <label><input type="checkbox" name="modulosPermitidos[proveedores][eliminar]" value="true"
              <%=persona.modulosPermitidos.proveedores?.eliminar ? "checked" : "" %>> Eliminar</label>
        </div>

        <!-- Planes -->
        <p class="text-gray-600 font-semibold text-xs mb-1 mt-2">Planes</p>
        <div class="flex flex-wrap gap-x-2 gap-y-1 text-xs">
          <label><input type="checkbox" name="modulosPermitidos[planes][ver]" value="true"
              <%=persona.modulosPermitidos.planes?.ver ? "checked" : "" %>> Ver</label>
          <label><input type="checkbox" name="modulosPermitidos[planes][crear]" value="true"
              <%=persona.modulosPermitidos.planes?.crear ? "checked" : "" %>> Crear</label>
          <label><input type="checkbox" name="modulosPermitidos[planes][editar]" value="true"
              <%=persona.modulosPermitidos.planes?.editar ? "checked" : "" %>> Editar</label>
          <label><input type="checkbox" name="modulosPermitidos[planes][eliminar]" value="true"
              <%=persona.modulosPermitidos.planes?.eliminar ? "checked" : "" %>> Eliminar</label>
        </div>

        <!-- Pagos -->
        <p class="text-gray-600 font-semibold text-xs mb-1 mt-2">Pagos</p>
        <div class="flex flex-wrap gap-x-2 gap-y-1 text-xs">
          <label><input type="checkbox" name="modulosPermitidos[pagos][ver]" value="true"
              <%=persona.modulosPermitidos.pagos?.ver ? "checked" : "" %>> Ver</label>
          <label><input type="checkbox" name="modulosPermitidos[pagos][crear]" value="true"
              <%=persona.modulosPermitidos.pagos?.crear ? "checked" : "" %>> Crear</label>
          <label><input type="checkbox" name="modulosPermitidos[pagos][editar]" value="true"
              <%=persona.modulosPermitidos.pagos?.editar ? "checked" : "" %>> Editar</label>
          <label><input type="checkbox" name="modulosPermitidos[pagos][eliminar]" value="true"
              <%=persona.modulosPermitidos.pagos?.eliminar ? "checked" : "" %>> Eliminar</label>
        </div>
      </div>

      <!-- Columna 3: Gerencia -->
      <div>
        <h2 class="font-bold text-gray-800 mb-1 text-sm">Gerencia</h2>
        <p class="text-gray-500 italic text-xs mt-2 ">Sin módulos asignados</p>
      </div>

      <!-- Columna 4: Proyectos -->
      <div>
        <h2 class="font-bold text-gray-800 mb-1 text-sm">Proyectos</h2>
        <p class="text-gray-600 font-semibold text-xs mb-1 mt-2">Escuelas</p>
        <div class="flex flex-wrap gap-x-2 gap-y-1 text-xs">
          <label><input type="checkbox" name="modulosPermitidos[escuelas][ver]" value="true"
              <%=persona.modulosPermitidos.escuelas?.ver ? "checked" : "" %>> Ver</label>
          <label><input type="checkbox" name="modulosPermitidos[escuelas][crear]" value="true"
              <%=persona.modulosPermitidos.escuelas?.crear ? "checked" : "" %>> Crear</label>
          <label><input type="checkbox" name="modulosPermitidos[escuelas][editar]" value="true"
              <%=persona.modulosPermitidos.escuelas?.editar ? "checked" : "" %>> Editar</label>
          <label><input type="checkbox" name="modulosPermitidos[escuelas][eliminar]" value="true"
              <%=persona.modulosPermitidos.escuelas?.eliminar ? "checked" : "" %>> Eliminar</label>
        </div>
      </div>

      <!-- Columna 5: Técnica -->
      <div>
        <h2 class="font-bold text-gray-800 mb-1 text-sm">Técnica</h2>

         <!-- Viaticos -->
        <p class="text-gray-600 font-semibold text-xs mb-1 mt-2">Viáticos</p>
        <div class="flex flex-wrap gap-x-2 gap-y-1 text-xs">
          <label><input type="checkbox" name="modulosPermitidos[viaticos][ver]" value="true"
              <%=persona.modulosPermitidos.viaticos?.ver ? "checked" : "" %>> Ver</label>
          <label><input type="checkbox" name="modulosPermitidos[viaticos][crear]" value="true"
              <%=persona.modulosPermitidos.viaticos?.crear ? "checked" : "" %>> Crear</label>
          <label><input type="checkbox" name="modulosPermitidos[viaticos][editar]" value="true"
              <%=persona.modulosPermitidos.viaticos?.editar ? "checked" : "" %>> Editar</label>
          <label><input type="checkbox" name="modulosPermitidos[viaticos][eliminar]" value="true"
              <%=persona.modulosPermitidos.viaticos?.eliminar ? "checked" : "" %>> Eliminar</label>
        </div>

         <!-- Pedido de materiales -->
        <p class="text-gray-600 font-semibold text-xs mb-1 mt-2">Pedido de Materiales</p>
        <div class="flex flex-wrap gap-x-2 gap-y-1 text-xs">
          <label><input type="checkbox" name="modulosPermitidos[materiales][ver]" value="true"
              <%=persona.modulosPermitidos.materiales?.ver ? "checked" : "" %>> Ver</label>
          <label><input type="checkbox" name="modulosPermitidos[materiales][crear]" value="true"
              <%=persona.modulosPermitidos.materiales?.crear ? "checked" : "" %>> Crear</label>
          <label><input type="checkbox" name="modulosPermitidos[materiales][editar]" value="true"
              <%=persona.modulosPermitidos.materiales?.editar ? "checked" : "" %>> Editar</label>
          <label><input type="checkbox" name="modulosPermitidos[materiales][eliminar]" value="true"
              <%=persona.modulosPermitidos.materiales?.eliminar ? "checked" : "" %>> Eliminar</label>
        </div>
      </div>

    </div>

    <!-- Botón -->
    <div class="text-center pt-6">
      <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-800 transition">
        Guardar Cambios
      </button>
    </div>

  </form>
</div>