<main class="bg-gray-100 min-h-screen py-10 px-4">
  <%
    // Helper USD: US$ 12.345,67 (locale es-AR)
    const fmtUSD = (v) =>
      new Intl.NumberFormat('es-AR', {
        style: 'currency',
        currency: 'USD',
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
      }).format(Number(v || 0));
  %>

  <div class="max-w-6xl mx-auto space-y-6">

    <!-- Header + acciones (estilo mejorado, sin cambiar fuentes) -->
    <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-200 relative overflow-hidden">
      <!-- franja superior -->
      <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-indigo-500/70 via-sky-500/70 to-emerald-500/70"></div>

      <div class="flex flex-col gap-4">
        <!-- Primera fila: Título + botón Volver arriba a la derecha -->
        <div class="flex items-start justify-between gap-4">
          <div class="flex items-start gap-3">
            <!-- avatar con inicial (sutil) -->
            <div class="h-10 w-10 shrink-0 rounded-lg bg-indigo-100 text-indigo-700 grid place-items-center font-semibold">
              <%= (proveedor.nombreReal||'?').slice(0,1).toUpperCase() %>
            </div>

            <div>
              <h1 class="text-2xl font-bold text-gray-900 tracking-tight">
                Proveedor #<%= proveedor.numeroProveedor %> — <%= proveedor.nombreFantasia || proveedor.nombreReal %>
              </h1>
              <h1 class="text-xl font-bold text-gray-900">
                Nombre: <%= proveedor.nombreReal %>
              </h1>
              <p class="text-sm text-gray-600">
                CUIT: <span class="font-mono"><%= proveedor.cuit || '—' %></span> ·
                IVA: <%= proveedor.condicionIva || '—' %> ·
                Tel: <%= proveedor.telefonoCelular || '—' %> ·
                Estado:
                <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium ring-1
                             <%= (proveedor.activo ?? true) ? 'bg-emerald-50 text-emerald-700 ring-emerald-200' : 'bg-gray-100 text-gray-700 ring-gray-300' %>">
                  <span class="h-1.5 w-1.5 rounded-full <%= (proveedor.activo ?? true) ? 'bg-emerald-500' : 'bg-gray-400' %>"></span>
                  <%= (proveedor.activo ?? true) ? 'Activo' : 'Inactivo' %>
                </span>
              </p>

              <p class="text-sm text-gray-600 mt-1">
                Plan:
                <% if (proveedor.plan) { %>
                  <span class="font-medium"><%= proveedor.plan.nombre %></span>
                  — <%= fmtUSD(proveedor.plan.importe || proveedor.precioPlan || 0) %>
                  <% if (typeof proveedor.precioPlan === 'number') { %>
                    <span class="text-xs text-gray-500">(override)</span>
                  <% } %>
                <% } else { %>
                  <span class="text-gray-500">Sin plan</span>
                <% } %>
              </p>
            </div>
          </div>

          <!-- Botón Volver arriba a la derecha -->
          <div class="shrink-0 flex items-center gap-2">
            <a href="/proveedores/<%= proveedor._id %>/ver"
               class="inline-flex items-center gap-1.5 bg-gray-50 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-100 transition text-sm ring-1 ring-gray-200">
              ← Volver
            </a>
          </div>
        </div>

        <!-- Fila de acciones, alineada abajo a la izquierda -->
        <div class="pt-3 mt-1 border-t border-gray-200">
          <div class="flex flex-row flex-wrap items-center justify-start gap-2">
            <a href="/pagos/proveedores/<%= proveedor._id %>/registrar?periodo=<%= periodo %>"
               class="inline-flex items-center gap-1.5 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition text-sm shadow-sm ring-1 ring-blue-500/10">
              + Registrar pago
            </a>

            <a href="/notas/proveedores/<%= proveedor._id %>/credito?periodo=<%= periodo %>"
               class="inline-flex items-center gap-1.5 bg-emerald-600 text-white px-4 py-2 rounded-lg hover:bg-emerald-700 transition text-sm shadow-sm ring-1 ring-emerald-500/10">
              + Nota de crédito
            </a>
            <a href="/notas/proveedores/<%= proveedor._id %>/debito?periodo=<%= periodo %>"
               class="inline-flex items-center gap-1.5 bg-amber-600 text-white px-4 py-2 rounded-lg hover:bg-amber-700 transition text-sm shadow-sm ring-1 ring-amber-500/10">
              + Nota de débito
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Resumen del período (KPI con estilos sutiles, sin cambiar fuente de números) -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
      <div class="bg-white p-5 rounded-2xl shadow-lg border border-gray-200">
        <p class="text-[11px] tracking-wide uppercase text-gray-500">Total cargos</p>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= fmtUSD(totales.cargo) %></p>
      </div>
      <div class="bg-white p-5 rounded-2xl shadow-lg border border-gray-200">
        <p class="text-[11px] tracking-wide uppercase text-gray-500">Notas de débito</p>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= fmtUSD(totales.notaDebito) %></p>
      </div>
      <div class="bg-white p-5 rounded-2xl shadow-lg border border-gray-200">
        <p class="text-[11px] tracking-wide uppercase text-gray-500">Notas de crédito</p>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= fmtUSD(totales.notaCredito) %></p>
      </div>
      <div class="bg-white p-5 rounded-2xl shadow-lg border border-gray-200">
        <p class="text-[11px] tracking-wide uppercase text-gray-500">Pagos</p>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= fmtUSD(totales.pagos) %></p>
      </div>
      <div class="bg-white p-5 rounded-2xl shadow-lg border border-gray-200">
        <p class="text-[11px] tracking-wide uppercase text-gray-500">Saldo total</p>
        <p class="mt-1 text-xl font-semibold <%= totales.saldo > 0 ? 'text-rose-600' : (totales.saldo < 0 ? 'text-emerald-700' : 'text-gray-900') %>">
          <%= fmtUSD(totales.saldo) %>
        </p>
      </div>
    </div>

    <!-- Movimientos del período -->
    <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-200">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 gap-2">
        <h2 class="text-lg font-semibold text-gray-800">Movimientos del período</h2>
        <span class="text-sm text-gray-600">
          <span class="hidden sm:inline">Período: </span>
          <span class="inline-flex items-center rounded-full border border-gray-300 bg-gray-50 px-3 py-1 font-medium">
            <%= periodo %>
          </span>
        </span>
      </div>

      <%
        // ⇢ ORDENAR MOVIMIENTOS POR FECHA DESC (más nuevos primero)
        const movsOrdenados = (movimientos || [])
          .slice()
          .sort((a, b) => new Date(b.fecha || 0) - new Date(a.fecha || 0));
      %>

      <% if (movsOrdenados.length === 0) { %>
        <p class="text-gray-500 text-sm">No hay movimientos en este período.</p>
      <% } else { %>
        <ul class="rounded-xl border border-gray-200 overflow-hidden">
          <% movsOrdenados.forEach((m, idx) => { %>
            <li class="flex items-start justify-between gap-3 px-3 py-3 border-b border-gray-200 last:border-0
                       <%= (idx % 2 === 0) ? 'bg-white' : 'bg-gray-50' %> hover:bg-gray-100 transition-colors">
              <div>
                <div class="text-sm">
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium ring-1
                    <%= m.tipo === 'cargo'
                        ? 'bg-sky-100 text-sky-800 ring-sky-200'
                        : (m.tipo === 'pago'
                            ? 'bg-emerald-100 text-emerald-800 ring-emerald-200'
                            : (m.tipo === 'credito'
                                ? 'bg-emerald-100 text-emerald-800 ring-emerald-200'
                                : 'bg-amber-100 text-amber-800 ring-amber-200')) %>">
                    <%= m.tipo %>
                  </span>
                  <span class="ml-2 font-medium"><%= m.concepto || '(Sin detalle)' %></span>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  <%= fmtFechaHora(m.fecha) %>
                  <% if (m.creadorNombre && m.creadorNombre !== '—') { %>
                    · Cargado por <%= m.creadorNombre %>
                  <% } %>
                  <% if (m.tipo === 'pago' && (m.metodo || m.comprobante)) { %>
                    · <%= (m.metodo || '') %> <%= (m.comprobante ? `#${m.comprobante}` : '') %>
                  <% } %>
                </div>
              </div>
              <div class="text-right text-sm font-semibold <%= m.signo > 0 ? 'text-rose-600' : 'text-emerald-700' %>">
                <%= m.signo > 0 ? '+ ' : '- ' %><%= fmtUSD(m.importe) %>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>

  </div>
</main>
