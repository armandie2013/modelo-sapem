<main class="bg-gray-100 min-h-screen py-10 px-4">
  <div class="max-w-4xl mx-auto bg-white p-8 rounded-2xl shadow-lg border border-gray-300">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Detalle del Proveedor</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
      <div>
        <label class="block text-gray-700 font-medium">Número de proveedor</label>
        <input type="text" value="<%= proveedor.numeroProveedor %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">Nombre de fantasía</label>
        <input type="text" value="<%= proveedor.nombreFantasia %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">Nombre real</label>
        <input type="text" value="<%= proveedor.nombreReal %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">CUIT</label>
        <input type="text" value="<%= proveedor.cuit %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">Domicilio</label>
        <input type="text" value="<%= proveedor.domicilio %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">Domicilio Fiscal</label>
        <input type="text" value="<%= proveedor.domicilioFiscal %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">Teléfono celular</label>
        <input type="text" value="<%= proveedor.telefonoCelular || '-' %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">Teléfono fijo</label>
        <input type="text" value="<%= proveedor.telefonoFijo || '-' %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">Email</label>
        <input type="text" value="<%= proveedor.email || '-' %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div>
        <label class="block text-gray-700 font-medium">CBU</label>
        <input type="text" value="<%= proveedor.cbu || '-' %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div class="md:col-span-2">
        <label class="block text-gray-700 font-medium">Categoría</label>
        <input type="text" value="<%= proveedor.categoria %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>

      <div class="md:col-span-2">
        <label class="block text-gray-700 font-medium">Condición IVA</label>
        <input type="text" value="<%= proveedor.condicionIva %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100" />
      </div>
    </div>

    <div class="text-center mt-8">
      <a href="/proveedores" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-800 transition">
        Volver al listado
      </a>
    </div>
  </div>
</main>