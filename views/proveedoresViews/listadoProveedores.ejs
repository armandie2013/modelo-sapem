<main class="bg-gray-100 min-h-screen py-8 px-4">
  <div class="max-w-6xl mx-auto bg-white p-5 md:p-6 rounded-2xl shadow-lg border border-gray-300">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-4">
      <h1 class="text-xl sm:text-2xl font-bold text-gray-800">Proveedores</h1>
      <div class="flex items-center gap-2">
        <a
          href="/proveedores/registrar"
          class="bg-blue-600 text-white px-3 py-1.5 sm:px-4 sm:py-2 rounded-lg hover:bg-blue-800 transition text-xs sm:text-sm"
        >
          + Registrar proveedor
        </a>
      </div>
    </div>

    <!-- Tabla -->
    <div class="overflow-x-auto rounded-xl border border-gray-200">
      <table class="min-w-[920px] w-full text-xs sm:text-[13px] table-auto">
        <thead class="bg-gray-50 text-gray-700 font-semibold">
          <tr>
            <th class="px-3 py-2 text-left w-10">#</th>
            <th class="px-3 py-2 text-left">Nombre Real</th>
            <th class="px-3 py-2 text-left">Nombre Fantasía</th>
            <th class="px-3 py-2 text-left">CUIT</th>
            <th class="px-3 py-2 text-left">Plan</th>
            <th class="px-3 py-2 text-left">Importe</th>
            <th class="px-3 py-2 text-left">Estado</th>
            <th class="px-3 py-2 text-right w-48">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% if ((proveedores||[]).length === 0) { %>
            <tr class="odd:bg-white even:bg-gray-50">
              <td colspan="8" class="px-3 py-6 text-center text-gray-500">
                Sin proveedores cargados.
              </td>
            </tr>
          <% } else { %>
            <% proveedores.forEach(p => {
                 const activo = (p.activo ?? true);
                 const tieneOverride = (typeof p.precioPlan === 'number' && !Number.isNaN(p.precioPlan));
                 const importeMostrado = tieneOverride
                   ? p.precioPlan
                   : (typeof p.plan?.importe !== 'undefined' ? p.plan.importe : undefined);
            %>
              <tr class="odd:bg-white even:bg-gray-50 hover:bg-gray-100">
                <td class="px-3 py-2 align-middle text-gray-700">
                  <%= p.numeroProveedor || '-' %>
                </td>

                <td class="px-3 py-2 align-middle text-gray-900">
                  <div class="truncate max-w-[220px]" title="<%= p.nombreReal %>">
                    <%= p.nombreReal %>
                  </div>
                </td>

                <td class="px-3 py-2 align-middle text-gray-700">
                  <div class="truncate max-w-[220px]" title="<%= p.nombreFantasia || p.nombreReal || '(Sin nombre)' %>">
                    <%= p.nombreFantasia || p.nombreReal || '(Sin nombre)' %>
                  </div>
                </td>

                <td class="px-3 py-2 align-middle text-gray-700">
                  <%= p.cuit || '-' %>
                </td>

                <td class="px-3 py-2 align-middle text-gray-700">
                  <div class="truncate max-w-[220px]" title="<%= p.plan?.nombre || '—' %>">
                    <%= p.plan?.nombre || '—' %>
                  </div>
                </td>

                <td class="px-3 py-2 align-middle text-gray-900 whitespace-nowrap">
                  <% if (typeof importeMostrado !== 'undefined') { %>
                    US$ <%= Number(importeMostrado)
                          .toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                    <% if (tieneOverride) { %>
                      <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-amber-100 text-amber-800">
                        Override
                      </span>
                    <% } %>
                  <% } else { %>—<% } %>
                </td>

                <td class="px-3 py-2 align-middle">
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] sm:text-[11px] font-medium
                    <%= activo ? 'bg-green-100 text-green-800' : 'bg-gray-200 text-gray-700' %>">
                    <%= activo ? 'Activo' : 'Inactivo' %>
                  </span>
                </td>

                <!-- Acciones horizontales -->
                <td class="px-3 py-2 align-middle text-right">
                  <div class="flex justify-end items-center gap-2">
                    <a
                      href="/proveedores/<%= p._id %>/ver"
                      class="px-2 py-1 rounded bg-green-100 hover:bg-green-200 text-gray-800"
                    >Ver</a>

                    <a
                      href="/proveedores/<%= p._id %>/editar"
                      class="px-2 py-1 rounded bg-yellow-500 text-white hover:bg-yellow-600"
                    >Editar</a>

                    <% if (usuario?.modulosPermitidos?.proveedores?.eliminar) { %>
                      <form
                        action="/proveedores/<%= p._id %>?_method=DELETE"
                        method="POST"
                        onsubmit="return confirm('¿Eliminar proveedor?')"
                        class="inline-block m-0"
                      >
                        <button class="px-2 py-1 rounded bg-red-600 text-white hover:bg-red-700">
                          Eliminar
                        </button>
                      </form>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>