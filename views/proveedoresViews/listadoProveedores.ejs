<main class="bg-gray-100 min-h-screen py-8 px-4">
  <div class="max-w-7xl mx-auto bg-white p-6 rounded-2xl shadow-lg border border-gray-300">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-5">
      <h1 class="text-2xl font-bold text-gray-800">Proveedores</h1>
      <a
        href="/proveedores/registrar"
        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-800 transition text-sm"
      >
        + Registrar proveedor
      </a>
    </div>

    <!-- Tabla -->
    <div class="rounded-xl border border-gray-200 overflow-x-auto">
  <table class="w-full table-auto text-sm">
    <!-- Anchos pensados para que los nombres se lean completos -->
    <colgroup>
      <col style="width:3.25rem;" />      <!-- # -->
      <col style="width:28rem;" />        <!-- Nombre Real -->
      <col style="width:26rem;" />        <!-- Nombre Fantasía -->
      <col style="width:20rem;" />        <!-- Plan -->
      <col style="width:9.5rem;" />       <!-- Importe -->
      <col style="width:9.5rem;" />       <!-- Deuda -->
      <col style="width:7rem;" />         <!-- Estado -->
      <col style="width:12rem;" />        <!-- Acciones -->
    </colgroup>

    <thead class="bg-gray-50 text-gray-700 font-medium">
      <tr>
        <th class="px-3 py-2 text-left">#</th>
        <th class="px-3 py-2 text-left">Nombre Real</th>
        <th class="px-3 py-2 text-left">Nombre Fantasía</th>
        <th class="px-3 py-2 text-left">Plan</th>
        <th class="px-3 py-2 text-right">Importe</th>
        <th class="px-3 py-2 text-right">Deuda</th>
        <th class="px-3 py-2 text-left">Estado</th>
        <th class="px-3 py-2 text-right">Acciones</th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-200">
      <% if ((proveedores||[]).length === 0) { %>
        <tr>
          <td colspan="8" class="px-3 py-6 text-center text-gray-500">Sin proveedores cargados.</td>
        </tr>
      <% } else { %>
        <% proveedores.forEach(p => {
             const activo = (p.activo ?? true);
             const tieneOverride = (typeof p.precioPlan === 'number' && !Number.isNaN(p.precioPlan));
             const importeMostrado = tieneOverride
               ? p.precioPlan
               : (typeof p.plan?.importe !== 'undefined' ? p.plan.importe : undefined);
             const deuda = Number(p.saldoTotal || 0);
        %>
          <tr class="hover:bg-gray-50">
            <!-- # -->
            <td class="px-3 py-2 align-middle text-gray-700">
              <%= p.numeroProveedor || '-' %>
            </td>

            <!-- Nombre real: sin truncate, permite salto de línea -->
            <td class="px-3 py-2 align-middle text-gray-900">
              <div class="whitespace-normal break-words" title="<%= p.nombreReal %>">
                <%= p.nombreReal %>
              </div>
            </td>

            <!-- Nombre fantasía: sin truncate, permite salto de línea -->
            <td class="px-3 py-2 align-middle text-gray-700">
              <div class="whitespace-normal break-words"
                   title="<%= p.nombreFantasia || p.nombreReal || '(Sin nombre)' %>">
                <%= p.nombreFantasia || p.nombreReal || '(Sin nombre)' %>
              </div>
            </td>

            <!-- Plan (también sin truncate para nombres largos) -->
            <td class="px-3 py-2 align-middle text-gray-700">
              <div class="whitespace-normal break-words" title="<%= p.plan?.nombre || '—' %>">
                <%= p.plan?.nombre || '—' %>
              </div>
            </td>

            <!-- Importe -->
            <td class="px-3 py-2 align-middle text-right">
              <% if (typeof importeMostrado !== 'undefined') { %>
                <span class="whitespace-nowrap tabular-nums font-medium">
                  US$ <%= Number(importeMostrado).toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                </span>
                <% if (tieneOverride) { %>
                  <span class="ml-1 inline-flex items-center px-1.5 py-0.5 rounded-full text-[10px] font-medium bg-amber-100 text-amber-800">
                    Override
                  </span>
                <% } %>
              <% } else { %>—<% } %>
            </td>

            <!-- Deuda -->
            <td class="px-3 py-2 align-middle text-right">
              <span class="whitespace-nowrap tabular-nums font-medium <%= deuda > 0 ? 'text-red-600' : (deuda < 0 ? 'text-green-700' : 'text-gray-800') %>">
                US$ <%= Number(deuda).toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
              </span>
            </td>

            <!-- Estado -->
            <td class="px-3 py-2 align-middle">
              <span class="inline-flex items-center justify-center w-16 px-1.5 py-[2px] rounded-full text-[11px] font-medium
                <%= activo ? 'bg-green-100 text-green-800' : 'bg-gray-200 text-gray-700' %>">
                <%= activo ? 'Activo' : 'Inactivo' %>
              </span>
            </td>

            <!-- Acciones -->
            <td class="px-3 py-2 align-middle">
              <div class="flex justify-end items-center gap-2 min-w-[10rem]">
                <a href="/proveedores/<%= p._id %>/ver"
                   class="px-2.5 py-1.5 rounded bg-green-100 hover:bg-green-200 text-gray-800 text-xs">Ver</a>
                <a href="/proveedores/<%= p._id %>/editar"
                   class="px-2.5 py-1.5 rounded bg-yellow-500 text-white hover:bg-yellow-600 text-xs">Editar</a>
                <% if (usuario?.modulosPermitidos?.proveedores?.eliminar) { %>
                  <form action="/proveedores/<%= p._id %>?_method=DELETE" method="POST" class="inline-block m-0"
                        onsubmit="return confirm('¿Eliminar proveedor?')">
                    <button class="px-2.5 py-1.5 rounded bg-red-600 text-white hover:bg-red-700 text-xs">Eliminar</button>
                  </form>
                <% } %>
              </div>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

  </div>
</main>
