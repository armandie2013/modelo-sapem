<main class="bg-gray-100 min-h-screen py-10 px-4">
  <div class="bg-white max-w-4xl mx-auto p-8 rounded-2xl shadow-lg border border-gray-300 space-y-6">
    <h1 class="text-2xl font-bold text-gray-800">Plan: <%= plan.nombre %></h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
      <div class="border border-gray-200 rounded-lg p-4">
        <p class="text-gray-500 font-medium">Detalle</p>
        <p class="text-gray-800 mt-1"><%= plan.detalle || '-' %></p>
      </div>
      <div class="border border-gray-200 rounded-lg p-4">
        <p class="text-gray-500 font-medium">Importe</p>
        <p class="text-gray-800 mt-1">
          $ <%= Number(plan.importe || 0).toLocaleString("es-AR", { minimumFractionDigits: 2 }) %>
        </p>
      </div>
      <div class="border border-gray-200 rounded-lg p-4">
        <p class="text-gray-500 font-medium">Estado</p>
        <p class="mt-1">
          <span class="inline-block px-2 py-1 rounded text-xs font-semibold
            <%= plan.activo ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-700' %>">
            <%= plan.activo ? "Activo" : "Inactivo" %>
          </span>
        </p>
      </div>
      <div class="border border-gray-200 rounded-lg p-4">
        <p class="text-gray-500 font-medium">Creado</p>
        <p class="text-gray-800 mt-1"><%= new Date(plan.createdAt).toLocaleString("es-AR") %></p>
      </div>
    </div>

    <div class="flex items-center gap-2">
      <% if (usuario?.modulosPermitidos?.planes?.editar) { %>
        <a href="/planes/<%= plan._id %>/editar"
           class="bg-gray-200 text-gray-800 px-6 py-2 rounded-lg hover:bg-gray-300 transition text-sm">
          Editar
        </a>
      <% } %>
      <a href="/planes"
         class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-800 transition text-sm">
        Volver
      </a>
    </div>
  </div>
</main>