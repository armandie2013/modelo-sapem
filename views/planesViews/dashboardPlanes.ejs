<main class="bg-gray-100 min-h-screen py-10 px-4">
  <div class="bg-white max-w-6xl mx-auto p-8 rounded-2xl shadow-xl border border-gray-300">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl text-gray-800">Listado de Planes</h1>
      <% if (usuario?.modulosPermitidos?.planes?.crear) { %>
        <a href="/planes/crear" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-800 transition">
          + Crear Plan
        </a>
      <% } %>
    </div>

    <% if (!planes || planes.length === 0) { %>
      <p class="text-gray-600 text-center italic">No hay planes cargados.</p>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="w-full text-sm table-auto border-collapse">
          <thead class="bg-gray-100 text-left text-gray-700 font-semibold">
            <tr>
              <th class="border px-4 py-2">Nombre</th>
              <th class="border px-4 py-2">Detalle</th>
              <th class="border px-4 py-2">Importe</th>
              <th class="border px-4 py-2">Estado</th>
              <th class="border px-4 py-2 text-center"></th>
            </tr>
          </thead>
          <tbody>
            <% planes.forEach((p) => { %>
              <tr class="hover:bg-gray-50">
                <td class="border px-4 py-2 font-medium text-gray-900">
                  <a href="/planes/<%= p._id %>" class="hover:underline"><%= p.nombre %></a>
                </td>
                <td class="border px-4 py-2 text-gray-700"><%= p.detalle || "-" %></td>
                <td class="border px-4 py-2 text-gray-900">
                  $ <%= Number(p.importe || 0).toLocaleString("es-AR", { minimumFractionDigits: 2 }) %>
                </td>
                <td class="border px-4 py-2">
                  <span class="inline-block px-2 py-1 rounded text-xs font-semibold
                    <%= p.activo ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-700' %>">
                    <%= p.activo ? "Activo" : "Inactivo" %>
                  </span>
                </td>
                <td class="border px-4 py-2 text-center">
                  <% if (usuario?.modulosPermitidos?.planes?.editar) { %>
                    <a href="/planes/<%= p._id %>/editar" class="text-blue-700 hover:text-blue-900 font-medium">Editar</a>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</main>