<main class="bg-gray-100 min-h-screen py-10 px-4">
  <div class="bg-white max-w-6xl mx-auto p-8 rounded-2xl shadow-xl border border-gray-200 relative overflow-hidden">
    <!-- Franja superior sutil (match crear/editar) -->
    <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-indigo-500/70 via-sky-500/70 to-emerald-500/70"></div>

    <% 
      // Helpers
      const fmtUSD = (v) => 'US$ ' + Number(v || 0).toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
      const perms = (usuario && usuario.modulosPermitidos) ? usuario.modulosPermitidos : {};
      const puedeCrear  = !!(perms.planes && perms.planes.crear);
      const puedeEditar = !!(perms.planes && perms.planes.editar);
      const _planes = Array.isArray(planes) ? planes : [];
    %>

    <!-- Header + acción principal -->
    <header class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 tracking-tight">Listado de planes</h1>
        <p class="text-sm text-gray-600">Administrá los planes existentes.</p>
      </div>
      <div class="flex items-center gap-2">
        <% if (puedeCrear) { %>
          <a href="/planes/crear"
             class="inline-flex items-center gap-1.5 bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition text-sm shadow-sm ring-1 ring-indigo-500/10">
            + Crear plan
          </a>
        <% } %>
      </div>
    </header>

    <!-- Contenido -->
    <% if (!_planes.length) { %>
      <div class="bg-white rounded-2xl border border-gray-200 p-10 text-center">
        <p class="text-gray-600 italic">No hay planes cargados.</p>
      </div>
    <% } else { %>
      <div class="overflow-hidden rounded-2xl border border-gray-200">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-gray-50 text-left text-gray-700">
              <tr class="font-semibold">
                <th class="px-4 py-3">Nombre</th>
                <th class="px-4 py-3">Detalle</th>
                <th class="px-4 py-3">Importe</th>
                <th class="px-4 py-3">Estado</th>
                <th class="px-4 py-3 text-center w-28">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% _planes.forEach(function(p, idx) { %>
                <tr class="<%= (idx % 2 === 0) ? 'bg-white' : 'bg-gray-50' %> hover:bg-gray-100 transition-colors">
                  <td class="px-4 py-3 font-medium text-gray-900">
                    <a href="/planes/<%= p._id %>" class="hover:underline"><%= p.nombre %></a>
                  </td>
                  <td class="px-4 py-3 text-gray-700"><%= p.detalle || '-' %></td>
                  <td class="px-4 py-3 text-gray-900"><%= fmtUSD(p.importe) %></td>
                  <td class="px-4 py-3">
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-semibold ring-1
                                 <%= p.activo ? 'bg-emerald-50 text-emerald-700 ring-emerald-200' : 'bg-gray-100 text-gray-700 ring-gray-300' %>">
                      <%= p.activo ? 'Activo' : 'Inactivo' %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-center">
                    <% if (puedeEditar) { %>
                      <a href="/planes/<%= p._id %>/editar" class="text-indigo-700 hover:text-indigo-900 font-medium">Editar</a>
                    <% } else { %>
                      <span class="text-gray-400">—</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } %>
  </div>
</main>
