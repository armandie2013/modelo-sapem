<!-- Dashboard de Viáticos -->
<div class="bg-gray-100 min-h-screen py-10 px-6">
  <div class="max-w-7xl mx-auto bg-white p-8 rounded-2xl shadow-xl">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Dashboard de Viáticos</h1>
      <% if (!mostrarTodos) { %>
        <a href="/viaticos/dashboard/todos" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-800 transition">
          Ver todos los viáticos
        </a>
      <% } else { %>
        <a href="/viaticos/dashboard" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition">
          Ver últimos 10
        </a>
      <% } %>
    </div>

    <% if (viaticos.length === 0) { %>
      <p class="text-gray-600 text-center">No hay viáticos disponibles.</p>
    <% } else { %>
      <table class="w-full table-auto text-sm border-collapse">
        <thead class="bg-gray-200 text-gray-700 font-semibold">
          <tr>
            <th class="px-4 py-2 text-left">Fecha</th>
            <th class="px-4 py-2 text-left">Viajantes</th>
            <th class="px-4 py-2 text-left">Origen</th>
            <th class="px-4 py-2 text-left">Destino</th>
            <th class="px-4 py-2 text-left">Motivo</th>
            <th class="px-4 py-2 text-left">Total Viático</th>
            <th class="px-4 py-2 text-left">Adicional</th>
            <th class="px-4 py-2 text-left">Creado por</th>
            <th class="px-4 py-2 text-left">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% viaticos.forEach(v => { %>
            <tr class="border-b hover:bg-gray-50 transition">
              <td class="px-4 py-2"><%= new Date(v.fechaDeCreacion).toLocaleDateString('es-AR') %></td>
              <td class="px-4 py-2">
                <ul class="list-disc ml-4">
                  <% v.viajantes.forEach(vj => { %>
                    <li><%= vj.nombre %></li>
                  <% }) %>
                </ul>
              </td>
              <td class="px-4 py-2"><%= v.origen %></td>
              <td class="px-4 py-2"><%= v.destino %></td>
              <td class="px-4 py-2"><%= v.motivoDelViaje %></td>
              <td class="px-4 py-2">$ <%= v.montoTotalViatico.toLocaleString('es-AR', {minimumFractionDigits: 2}) %></td>
              <td class="px-4 py-2">$ <%= v.adicionalEnEfectivo.toLocaleString('es-AR', {minimumFractionDigits: 2}) %></td>
              <td class="px-4 py-2"><%= v.creadoPor %></td>
              <td class="px-4 py-2 space-x-2">
                <a href="/viaticos/<%= v._id %>" class="text-blue-600 hover:underline">Ver</a>
                <a href="/viaticos/<%= v._id %>/editar" class="text-yellow-600 hover:underline">Editar</a>
                <form action="/viaticos/<%= v._id %>?_method=DELETE" method="POST" class="inline">
                  <button type="submit" class="text-red-600 hover:underline">Eliminar</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</div>