<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Viático Nº <%= viatico.numeroDeViaje %></title>
  <style>
    @page { size: A4; margin: 2cm; }
    * { box-sizing: border-box; }

    html, body {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 9pt;
      line-height: 1.33;
      color: #000;
      background: #fff;
    }

    .sheet { max-width: 19cm; margin: 0 auto; }

    header {
      text-align: center;
      border-bottom: 1px solid #000;
      padding-bottom: 8px;
      margin-bottom: 10px;
    }

    header h1 {
      margin: 0 0 3px 0;
      font-size: 13pt;
      font-weight: bold;
      text-transform: uppercase;
    }

    .meta { margin: 0 auto; display: inline-table; font-size: 8.3pt; }
    .meta-row td { padding: 1px 6px; }
    .meta-row .label { font-weight: bold; white-space: nowrap; }

    .section { margin-top: 10px; }
    .section-title { margin: 0 0 3px; font-weight: bold; font-size: 10pt; text-transform: uppercase; }
    .underline { border-top: 1px solid #000; margin-bottom: 4px; }

    .kv { display: table; width: 100%; font-size: 8.5pt; }
    .kv-row { display: table-row; }
    .kv-cell { display: table-cell; padding: 2px 3px; vertical-align: top; }
    .kv-label { font-weight: bold; white-space: nowrap; width: 1%; }

    table { width: 100%; border-collapse: collapse; font-size: 8.5pt; }
    thead th {
      border: 1px solid #000;
      padding: 3px 5px;
      text-align: left;
      background: #f0f0f0;
      font-weight: bold;
    }
    tbody td {
      border: 1px solid #000;
      padding: 3px 5px;
      vertical-align: top;
    }
    .num { text-align: right; }
    .currency::before { content:"$ "; }

    .summary {
      border: 1px solid #000;
      padding: 5px 7px;
      margin-top: 3px;
      font-size: 8.5pt;
    }
    .summary p { margin: 2px 0; }

    /* ► CUADRO DE TOTAL A RECIBIR */
    .total-recibir-box {
      margin-top: 6px;
      display: flex;
      justify-content: flex-end;
    }
    .total-recibir-inner {
      border: 1px solid #000;
      padding: 5px 8px;
      font-size: 8.5pt;
      text-align: right;
      min-width: 8cm;
      font-weight: bold;
      background: #f7f7f7;
    }

    /* Cuadro de vales de combustible */
    .vales-box {
      border: 1px solid #000;
      padding: 5px 7px;
      margin-top: 8px;
      font-size: 8.5pt;
    }
    .vales-box-title {
      font-weight: bold;
      margin-bottom: 4px;
      text-transform: uppercase;
      font-size: 9pt;
    }
    .vales-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 8.3pt;
    }
    .vales-table th,
    .vales-table td {
      border: 1px solid #000;
      padding: 3px 5px;
      text-align: left;
    }
    .vales-table th {
      background: #f0f0f0;
      font-weight: bold;
    }
    .vales-table .num {
      text-align: right;
    }

    .sign-box {
      border: 1px solid #000;
      margin-top: 14px;
      height: 4cm;
      padding: 4px 6px;
    }
    .sign-title {
      font-weight: bold;
      font-size: 8pt;
      text-transform: uppercase;
    }

    .firma-aprobacion {
      margin-top: 2.5cm;
      font-size: 8pt;
      width: 6cm;
      text-align: center;
    }
    .firma-line {
      width: 6cm;
      border-top: 1px solid #000;
      margin-bottom: 2px;
      margin-left: 0;
    }

    .meta-small {
      font-size: 7.5pt;
      margin-top: 3px;
      text-align: right;
    }
  </style>
</head>
<body>

<%
  // Helper de fecha sin problemas de huso horario
  function fmtFecha(d) {
    if (!d) return "";
    let iso;
    if (typeof d === "string") {
      iso = d.slice(0, 10);          // "YYYY-MM-DD..."
    } else {
      iso = new Date(d).toISOString().slice(0, 10);
    }
    const partes = iso.split("-");   // [YYYY, MM, DD]
    if (partes.length !== 3) return iso;
    return partes[2] + "/" + partes[1] + "/" + partes[0];
  }

  var viajantesArr = viatico.viajantes || [];
  var totalViajantes = viajantesArr.reduce((a,v)=>a+(v.importe||0),0);
  var adicionalEf = viatico.adicionalEnEfectivo || 0;
  var totalARecibir = totalViajantes + adicionalEf;
%>

<div class="sheet">

  <header>
    <% if (typeof logoDataUri !== 'undefined' && logoDataUri) { %>
      <div style="text-align:center; margin-bottom:14px;">
        <img src="<%= logoDataUri %>" alt="Logo" style="max-height:75px; display:inline-block;" />
      </div>
    <% } %>

    <h1>Solicitud de Viático Nº <%= viatico.numeroDeViaje %></h1>

    <table class="meta">
      <tr class="meta-row">
        <td class="label">Fecha:</td>
        <td><%= fmtFecha(viatico.fechaDeCreacion) %></td>
      </tr>
      <tr class="meta-row">
        <td class="label">Área solicitante:</td>
        <td><%= viatico.areaSolicitante %></td>
      </tr>
    </table>
  </header>

  <div class="wrap">

    <!-- Datos del viaje -->
    <section class="section">
      <h2 class="section-title">Datos del viaje</h2>
      <div class="underline"></div>

      <div class="kv">
        <div class="kv-row">
          <div class="kv-cell kv-label">Fecha salida:</div>
          <div class="kv-cell">
            <%= fmtFecha(viatico.fechaDeSalida) %>
          </div>
          <div class="kv-cell kv-label">Fecha llegada:</div>
          <div class="kv-cell">
            <%= fmtFecha(viatico.fechaDeLlegada) %>
          </div>
        </div>

        <div class="kv-row">
          <div class="kv-cell kv-label">Origen:</div>
          <div class="kv-cell"><%= viatico.origen %></div>
          <div class="kv-cell kv-label">Destino:</div>
          <div class="kv-cell"><%= viatico.destino %></div>
        </div>

        <div class="kv-row">
          <div class="kv-cell kv-label">Motivo:</div>
          <div class="kv-cell"><%= viatico.motivoDelViaje %></div>
          <div class="kv-cell kv-label">Vehículo:</div>
          <div class="kv-cell"><%= viatico.vehiculoUtilizado %></div>
        </div>
      </div>
    </section>

    <!-- Viajantes -->
    <section class="section">
      <h2 class="section-title">Viajantes</h2>
      <div class="underline"></div>

      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Cargo</th>
            <th class="num">Importe</th>
          </tr>
        </thead>
        <tbody>
        <% viajantesArr.forEach(v=>{ %>
          <tr>
            <td><%= v.nombre %></td>
            <td><%= v.cargo %></td>
            <td class="num">
              <span class="currency"></span>
              <%= (v.importe||0).toLocaleString("es-AR",{minimumFractionDigits:2}) %>
            </td>
          </tr>
        <% }) %>
          <tr>
            <td colspan="2" class="num"><strong>Total de viáticos</strong></td>
            <td class="num">
              <strong>
                <span class="currency"></span>
                <%= totalViajantes.toLocaleString("es-AR",{minimumFractionDigits:2}) %>
              </strong>
            </td>
          </tr>
        </tbody>
      </table>
    </section>

    <!-- Resumen económico -->
    <section class="section">
      <h2 class="section-title">Resumen</h2>
      <div class="underline"></div>

      <div class="summary">
        <p><b>Adicional en efectivo:</b>
          <span class="currency"></span>
          <%= adicionalEf.toLocaleString("es-AR",{minimumFractionDigits:2}) %>
        </p>
        <p><b>Devolución:</b>
          <span class="currency"></span>
          <%= (viatico.devolucionEnEfectivo||0).toLocaleString("es-AR",{minimumFractionDigits:2}) %>
        </p>
        <p><b>Pendiente de rendición:</b>
          <span class="currency"></span>
          <%= (viatico.pendienteDeRendicion||0).toLocaleString("es-AR",{minimumFractionDigits:2}) %>
        </p>
      </div>

      <!-- TOTAL A RECIBIR (una línea, resaltado) -->
      <div class="total-recibir-box">
        <div class="total-recibir-inner">
          <strong>Total a recibir (viáticos + adicional):
            <span class="currency"></span>
            <%= totalARecibir.toLocaleString("es-AR",{minimumFractionDigits:2}) %>
          </strong>
        </div>
      </div>
    </section>

    <!-- Vales de combustible (CUADRO ARRIBA DE FIRMAS) -->
    <% if (viatico.valesCombustible) { %>
    <section class="section">
      <div class="vales-box">
        <div class="vales-box-title">Vales de combustible</div>
        <table class="vales-table">
          <thead>
            <tr>
              <th>Cantidad</th>
              <th>Valor por vale</th>
              <th class="num">Total vales</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= viatico.cantidadVale || 0 %></td>
              <td class="num">
                <span class="currency"></span>
                <%= (viatico.valorVale || 0).toLocaleString("es-AR",{minimumFractionDigits:2}) %>
              </td>
              <td class="num">
                <span class="currency"></span>
                <%= (viatico.totalVale || 0).toLocaleString("es-AR",{minimumFractionDigits:2}) %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
    <% } %>

    <!-- Firmas -->
    <section class="section">
      <div class="sign-box">
        <div class="sign-title">Firma de los viajantes</div>
      </div>

      <div class="firma-aprobacion">
        <div class="firma-line"></div>
        Firma de aprobación
      </div>

      <p class="meta-small">
        Creado por: <%= viatico.creadoPor %> · Documento: Uso interno
      </p>
    </section>

  </div>
</div>

</body>
</html>
