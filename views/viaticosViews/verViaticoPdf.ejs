<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Viático Nº <%= viatico.numeroDeViaje %></title>
  <style>
    /* ========= Base y tipografía (sobrio / legible) ========= */
    @page { size: A4; margin: 2cm; }
    * { box-sizing: border-box; }
    html, body {
      font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, "Noto Sans", "Liberation Sans", sans-serif;
      font-size: 10.5pt;
      line-height: 1.45;
      color: #111;
      background: #fff;
    }
    @media print {
      body { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
      .sheet { box-shadow: none !important; border: none !important; }
    }

    /* ========= Lienzo (opcional en pantalla) ========= */
    .sheet {
      margin: 0 auto;
      padding: 0;
      border: 1px solid #e5e7eb;        /* gris claro */
      border-radius: 12px;
      box-shadow: 0 8px 28px rgba(0,0,0,.06);
      overflow: hidden;
    }

    /* ========= Encabezado sobrio ========= */
    header {
      padding: 12px 0 16px;
      border-bottom: 2px solid #111;    /* línea fuerte como en el original */
      text-align: center;
    }
    header h1 {
      margin: 0 0 6px 0;
      font-size: 16pt;
      font-weight: 800;
      letter-spacing: .2px;
    }
    .meta {
      margin: 0 auto;
      display: inline-grid;
      grid-template-columns: auto auto;
      gap: 4px 14px;
      font-variant-numeric: tabular-nums;
      color: #374151; /* gris medio */
      font-size: 10pt;
    }
    .meta b { color: #111; font-weight: 700; }

    /* ========= Secciones ========= */
    .wrap { padding: 14px 0 0; }
    .section { margin-top: 18px; }
    .section-title {
      margin: 0 0 8px 0;
      font-weight: 800;
      font-size: 12pt;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }
    .section-title::before {
      content: "";
      width: 6px; height: 16px;
      border-radius: 2px;
      background: #0f172a; /* gris azulado oscuro, sobrio */
      display: inline-block;
    }

    /* ========= Bloque de datos clave (fácil de escanear) ========= */
    .kv {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 8px 20px;
      background: #f9fafb;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      padding: 10px 12px;
    }
    .kv p { margin: 0; }
    .kv small {
      display: block;
      color: #6b7280;        /* etiqueta */
      font-weight: 700;
      font-size: 9.5pt;
      margin-bottom: 2px;
    }
    .kv span { font-weight: 700; color: #111; }

    /* ========= Tabla ========= */
    table { width: 100%; border-collapse: collapse; margin-top: 8px; }
    thead th {
      text-align: left;
      padding: 8px 10px;
      border: 1px solid #d1d5db;       /* borde sutil */
      background: #f3f4f6;             /* encabezado claro */
      color: #111;
      font-weight: 800;
    }
    tbody td {
      padding: 8px 10px;
      border: 1px solid #e5e7eb;
      vertical-align: top;
    }
    tbody tr:nth-child(odd) td { background: #fbfdff; } /* cebra suave */
    .num {
      text-align: right;
      white-space: nowrap;
      font-variant-numeric: tabular-nums;
    }
    .currency::before { content: "$ "; color: #374151; }

    /* ========= Resúmenes / cuadros ========= */
    .summary {
      margin-top: 8px;
      padding: 10px 12px;
      border: 1px dashed #9ca3af;
      border-radius: 8px;
      background: #fcfcfc;
    }
    .summary p { margin: 6px 0; }
    .summary b { font-weight: 800; }

    /* ========= Pie / firmas ========= */
    .foot {
      display: grid; grid-template-columns: 1fr 1fr;
      gap: 24px; margin-top: 20px;
    }
    .sig { text-align: center; }
    .sig .line {
      border-top: 1px solid #111;
      height: 0; margin-top: 34px;
    }
    .sig small { display: block; margin-top: 6px; color: #6b7280; }
  </style>
</head>
<body>
  <div class="sheet">
    <header>
      <h1>Solicitud de Viático Nº <%= viatico.numeroDeViaje %></h1>
      <div class="meta">
        <div><b>Fecha:</b></div>
        <div><%= new Date(viatico.fechaDeCreacion).toLocaleDateString("es-AR") %></div>
        <div><b>Área Solicitante:</b></div>
        <div><%= viatico.areaSolicitante %></div>
      </div>
    </header>

    <div class="wrap">
      <!-- Datos generales (compacto, fácil de leer) -->
      <section class="section">
        <h2 class="section-title">Datos del viaje</h2>
        <div class="kv">
          <p><small>Motivo del viaje</small><span><%= viatico.motivoDelViaje %></span></p>
          <p><small>Vehículo utilizado</small><span><%= viatico.vehiculoUtilizado %></span></p>
          <p><small>Origen</small><span><%= viatico.origen %></span></p>
          <p><small>Destino</small><span><%= viatico.destino %></span></p>
        </div>
      </section>

      <!-- Viajantes -->
      <section class="section">
        <h2 class="section-title">Viajantes</h2>
        <table>
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Cargo</th>
              <th class="num">Importe</th>
            </tr>
          </thead>
          <tbody>
            <% viatico.viajantes.forEach(v => { %>
              <tr>
                <td><%= v.nombre %></td>
                <td><%= v.cargo %></td>
                <td class="num"><span class="currency"></span><%= v.importe.toLocaleString("es-AR", {minimumFractionDigits: 2}) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>

      <!-- Resumen económico -->
      <section class="section">
        <h2 class="section-title">Resumen económico</h2>
        <div class="summary">
          <p><b>Adicional en efectivo:</b> <span class="currency"></span><%= viatico.adicionalEnEfectivo.toLocaleString("es-AR", {minimumFractionDigits: 2}) %></p>
          <p><b>Devolución:</b> <span class="currency"></span><%= viatico.devolucionEnEfectivo.toLocaleString("es-AR", {minimumFractionDigits: 2}) %></p>
          <p><b>Pendiente de rendición:</b> <span class="currency"></span><%= viatico.pendienteDeRendicion.toLocaleString("es-AR", {minimumFractionDigits: 2}) %></p>
        </div>
      </section>

      <!-- Vales de combustible -->
      <% if (viatico.valesCombustible) { %>
      <section class="section">
        <h2 class="section-title">Vales de combustible</h2>
        <div class="kv" style="grid-template-columns: 1fr 1fr 1fr;">
          <p><small>Cantidad</small><span><%= viatico.cantidadVale %></span></p>
          <p><small>Valor por vale</small><span><span class="currency"></span><%= viatico.valorVale.toLocaleString("es-AR", {minimumFractionDigits: 2}) %></span></p>
          <p><small>Total vales</small><span><span class="currency"></span><%= viatico.totalVale.toLocaleString("es-AR", {minimumFractionDigits: 2}) %></span></p>
        </div>
      </section>
      <% } %>

      <!-- Pie -->
      <section class="section">
        <div class="kv" style="grid-template-columns: 1fr 1fr;">
          <p><small>Creado por</small><span><%= viatico.creadoPor %></span></p>
          <p><small>Documento</small><span>Uso interno</span></p>
        </div>

        <div class="foot">
          <div class="sig">
            <div class="line"></div>
            <small>Firma del solicitante</small>
          </div>
          <div class="sig">
            <div class="line"></div>
            <small>Firma de aprobación</small>
          </div>
        </div>
      </section>
    </div>
  </div>
</body>
</html>
