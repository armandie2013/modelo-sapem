                        <option value="">Seleccionar persona</option>
                        <% listaDePersonasDisponibles.forEach(p=> { %>
                          <option value="<%= p.nombreApellido %>" data-cargo="<%= p.cargo %>">
                            <%= p.nombreApellido %>
                          </option>
