<div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Usuarios Registrados</h1>
  
    <table class="w-full table-auto border-collapse">
      <thead>
        <tr class="bg-gray-100 text-left">
          <th class="px-4 py-2">Nombre</th>
          <th class="px-4 py-2">Apellido</th>
          <th class="px-4 py-2">Email</th>
          <th class="px-4 py-2">DNI</th>
          <th class="px-4 py-2">Rol</th>
          <th class="px-4 py-2 text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(u => { %>
          <tr class="border-t">
            <td class="px-4 py-2"><%= u.nombre %></td>
            <td class="px-4 py-2"><%= u.apellido %></td>
            <td class="px-4 py-2"><%= u.email %></td>
            <td class="px-4 py-2"><%= u.dni %></td>
            <td class="px-4 py-2"><%= u.rol %></td>
            <td class="px-4 py-2 text-center">
              <form action="/usuarios/eliminar/<%= u._id %>?_method=POST" method="POST" onsubmit="return confirm('Â¿Eliminar este usuario?')">
                <button class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-800">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>