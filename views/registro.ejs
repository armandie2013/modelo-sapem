<div class="flex justify-center items-start min-h-screen py-8 px-4">
  <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Registro de Usuario</h1>

    <!-- Mensajes de error -->
    <div class="min-h-[48px] mb-6">
      <% if (errores && errores.length > 0) { %>
        <div>
          <ul>
            <% errores.forEach(e => { %>
              <li class="text-red-700 text-center"><%= e.mensaje %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
    </div>

    <form action="/registro" method="POST" class="space-y-4">
      <div>
        <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">Nombre</label>
        <input type="text" name="nombre" id="nombre" required
               class="w-full border px-3 py-2 rounded-lg"
               value="<%= usuario?.nombre || '' %>">
      </div>

      <div>
        <label for="apellido" class="block text-sm font-medium text-gray-700 mb-2">Apellido</label>
        <input type="text" name="apellido" id="apellido" required
               class="w-full border px-3 py-2 rounded-lg"
               value="<%= usuario?.apellido || '' %>">
      </div>

      <div>
        <label for="dni" class="block text-sm font-medium text-gray-700 mb-2">DNI</label>
        <input type="number" name="dni" id="dni" required
               class="w-full border px-3 py-2 rounded-lg"
               value="<%= usuario?.dni || '' %>">
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Correo electrónico</label>
        <input type="email" name="email" id="email" required
               class="w-full border px-3 py-2 rounded-lg"
               value="<%= usuario?.email || '' %>">
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Contraseña</label>
        <input type="password" name="password" id="password" required
               class="w-full border px-3 py-2 rounded-lg">
      </div>

      <div>
        <label for="confirmarPassword" class="block text-sm font-medium text-gray-700 mb-2">Repetir Contraseña</label>
        <input type="password" name="confirmarPassword" id="confirmarPassword" required
               class="w-full border px-3 py-2 rounded-lg">
      </div>

      <div class="pt-4">
        <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 mt-4 rounded-lg hover:bg-blue-800 transition">
          Registrar
        </button>
      </div>
    </form>
  </div>
</div>


<!-- Pone las mayusculas al principio en los campos nombre y apellido -->
<script>
  function capitalizarPrimeraLetra(texto) {
    return texto.charAt(0).toUpperCase() + texto.slice(1).toLowerCase();
  }

  function aplicarCapitalizacion(input) {
    input.addEventListener("input", function () {
      const palabras = this.value.split(" ").map(capitalizarPrimeraLetra);
      this.value = palabras.join(" ");
    });
  }

  document.addEventListener("DOMContentLoaded", () => {
    const campoNombre = document.getElementById("nombre");
    const campoApellido = document.getElementById("apellido");

    if (campoNombre) aplicarCapitalizacion(campoNombre);
    if (campoApellido) aplicarCapitalizacion(campoApellido);
  });
</script>


