<main class="bg-gray-100 min-h-screen py-10 px-4">
    <div class="max-w-4xl mx-auto bg-white p-8 rounded-2xl shadow-lg border border-gray-300">
        <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Registrar Nueva Escuela</h1>

        <% if (typeof errores !=='undefined' && errores.length> 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <ul class="list-disc pl-5">
                    <% errores.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
            </div>
            <% } %>

                <form action="/escuelas/crear" method="POST" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Número de Ticket automático -->
                        <div>
                            <label for="numeroTicket" class="block text-sm font-medium text-gray-700">Número de
                                Ticket</label>
                            <input type="text" id="numeroTicket" value="<%= numeroTicket %> (automático)" readonly placeholder="Automático"
                                class="w-full border px-3 py-2 rounded-lg text-sm bg-gray-100 text-gray-600">
                            <input type="hidden" name="numeroTicket" value="<%= numeroTicket %>">
                        </div>

                        <!-- Fecha de creación -->
                        <div>
                            <label for="fechaDeCreacion" class="block text-sm font-medium text-gray-700">Fecha de
                                creación</label>
                            <input type="date" id="fechaDeCreacion" name="fechaDeCreacion" required
                                class="w-full border px-3 py-2 rounded-lg text-sm">
                        </div>
                        <div>
                            <label for="nombreEscuela" class="block text-sm font-medium text-gray-700">Nombre de la
                                escuela</label>
                            <input type="text" id="nombre" name="nombre" required
                                class="w-full border px-3 py-2 rounded-lg text-sm">
                        </div>

                        <div>
                            <label for="cue" class="block text-sm font-medium text-gray-700">CUE</label>
                            <input type="text" id="cue" name="cue" required class="w-full border px-3 py-2 rounded-lg text-sm">
                        </div>

                        <div>
                            <label for="provincia" class="block text-sm font-medium text-gray-700">Provincia</label>
                            <input type="text" id="provincia" name="provincia" required
                                class="w-full border px-3 py-2 rounded-lg text-sm">
                        </div>

                        <div>
                            <label for="departamento"
                                class="block text-sm font-medium text-gray-700">Departamento</label>
                            <input type="text" id="departamento" name="departamento" required
                                class="w-full border px-3 py-2 rounded-lg text-sm">
                        </div>

                        <div>
                            <label for="ciudad" class="block text-sm font-medium text-gray-700">Ciudad</label>
                            <input type="text" id="ciudad" name="ciudad" required
                                class="w-full border px-3 py-2 rounded-lg text-sm">
                        </div>

                        <div class="md:col-span-2">
                            <label for="direccion" class="block text-sm font-medium text-gray-700">Dirección</label>
                            <input type="text" id="direccion" name="direccion" required
                                class="w-full border px-3 py-2 rounded-lg text-sm">
                        </div>

                        <div class="md:col-span-2">
                            <label for="proveedor" class="block text-sm font-medium text-gray-700">Proveedor</label>
                            <input type="text" id="proveedor" name="proveedor" required
                                class="w-full border px-3 py-2 rounded-lg text-sm">
                        </div>

                        <div class="md:col-span-2">
                            <label for="detalleCaso" class="block text-sm font-medium text-gray-700">Detalle del
                                caso</label>
                            <textarea id="detalleDelCaso" name="detalleDelCaso" rows="4" required
                                class="w-full border px-3 py-2 rounded-lg text-sm"></textarea>
                        </div>
                    </div>
                    

                    <div class="flex justify-end mt-6">
                        <button type="submit"
                            class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-800 transition">
                            Guardar Escuela
                        </button>
                    </div>
                </form>
    </div>
</main>