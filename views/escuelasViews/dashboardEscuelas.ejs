<main class="bg-gray-100 min-h-screen py-10 px-4">
    <div class="max-w-7xl mx-auto bg-white p-8 rounded-2xl shadow-lg border border-gray-300">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Dashboard de Escuelas</h1>
            <a href="/escuelas/crear" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-800 transition">
                Nueva Escuela
            </a>
        </div>

        <% if (escuelas.length===0) { %>
            <p class="text-gray-600">No hay escuelas registradas.</p>
            <% } else { %>
                <div class="overflow-x-auto">
                    <table class="min-w-full table-auto border-collapse text-sm">
                        <thead>
                            <tr class="bg-gray-100 text-left">
                                <th class="px-4 py-2 border">N° Ticket</th>
                                <th class="px-4 py-2 border">Nombre</th>
                                <th class="px-4 py-2 border">CUE</th>
                                <th class="px-4 py-2 border">Provincia</th>
                                <th class="px-4 py-2 border">Ciudad</th>
                                <th class="px-4 py-2 border">Creación</th>
                                <th class="px-4 py-2 border">Creado por</th>
                                <th class="px-4 py-2 border text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% escuelas.forEach(escuela=> { %>
                                <tr>
                                    <td class="px-4 py-2 border">
                                        <%= escuela.numeroTicket %>
                                    </td>
                                    <td class="px-4 py-2 border">
                                        <%= escuela.nombre %>
                                    </td>
                                    <td class="px-4 py-2 border">
                                        <%= escuela.cue %>
                                    </td>
                                    <td class="px-4 py-2 border">
                                        <%= escuela.provincia %>
                                    </td>
                                    <td class="px-4 py-2 border">
                                        <%= escuela.ciudad %>
                                    </td>
                                    <td class="px-4 py-2 border">
                                        <%= new Date(escuela.fechaDeCreacion).toLocaleDateString('es-AR') %>
                                    </td>
                                    <td class="px-4 py-2 border">
                                        <%= escuela.creadoPor %>
                                    </td>
                                    <td class="px-4 py-2 border text-center space-x-2">
                                        <a href="/escuelas/<%= escuela._id %>"
                                            class="text-blue-600 hover:underline">Ver</a>
                                        <a href="/escuelas/<%= escuela._id %>/editar"
                                            class="text-yellow-600 hover:underline">Editar</a>
                                        <form action="/escuelas/<%= escuela._id %>?_method=DELETE" method="POST"
                                            class="inline"
                                            onsubmit="return confirm('¿Estás seguro que deseas eliminar esta escuela?');">

                                            <button type="submit" class="text-red-600 hover:underline">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } %>
    </div>
</main>