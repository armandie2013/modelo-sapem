<main class="bg-gray-100 min-h-screen py-10 px-4">
  <div class="max-w-4xl mx-auto bg-white p-8 rounded-2xl shadow-lg border border-gray-300">
    <div class="text-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Detalle del Caso - Escuela</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
      <div>
        <label class="block text-sm font-medium text-gray-700">Fecha de creación</label>
        <input type="date" value="<%= escuela.fechaDeCreacion.toISOString().split('T')[0] %>" disabled
          class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Número de ticket</label>
        <input type="text" value="<%= escuela.numeroTicket %>" disabled
          class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Creado por</label>
        <input type="text" value="<%= escuela.creadoPor %>" disabled
          class="w-full text-center border px-3 py-2 rounded-lg bg-gray-100 text-sm font-medium text-gray-800" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Editado por</label>
        <input type="text" value="<%= escuela.editadoPor || 'Sin editar' %>" disabled
          class="w-full text-center border px-3 py-2 rounded-lg bg-gray-100 text-sm font-medium text-red-600" />
      </div>
    </div>

    <!-- Datos principales -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <% const campos=["estado", "nombre" , "cue" , "provincia" , "departamento" , "ciudad" , "direccion" , "proveedor"
        ]; %>
        <% campos.forEach(campo=> { %>
          <div>
            <label class="block text-sm font-medium text-gray-700">
              <%= campo.charAt(0).toUpperCase() + campo.slice(1) %>
            </label>
            <input type="text" value="<%= escuela[campo] %>" disabled
              class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
          </div>
          <% }) %>
    </div>

    <!-- Detalle del caso -->
    <div class="mb-6">
      <label class="block text-sm font-medium text-gray-700">Detalle del caso</label>
      <textarea disabled rows="4"
        class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm resize-none"><%= escuela.detalleDelCaso %></textarea>
    </div>

    <!-- Observaciones técnicas -->
    <div class="mb-6">
      <label class="block text-sm font-medium text-gray-700">Observaciones técnicas</label>
      <textarea disabled rows="3"
        class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm resize-none"><%= escuela.observacionesTecnica || '' %></textarea>
    </div>

    <!-- Imágenes -->
    <% if (escuela.imagenes && escuela.imagenes.length> 0) { %>
      <div class="mt-6">
        <h2 class="text-sm font-semibold text-gray-700 mb-2">Imágenes cargadas:</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
          <% escuela.imagenes.forEach((img)=> { %>
            <div class="relative">
              <img src="/uploads/escuelas/<%= escuela.numeroTicket %>/<%= img %>" alt="Imagen cargada"
                class="w-full h-auto rounded-lg border" />
            </div>
            <% }) %>
        </div>
      </div>
      <% } %>

        <div class="text-center mt-8">
          <a href="/escuelas/dashboard"
            class="inline-block bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-800 transition">
            Volver al listado
          </a>
        </div>
  </div>
</main>