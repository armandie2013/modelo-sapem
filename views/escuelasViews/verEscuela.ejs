<main class="bg-gray-100 min-h-screen py-10 px-4">
    <div class="max-w-4xl mx-auto bg-white p-8 rounded-2xl shadow-lg border border-gray-300">
      <div class="text-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Detalle del Caso - Escuela</h1>
      </div>
  
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <label class="block text-sm font-medium text-gray-700">Fecha de creación</label>
          <input type="date" value="<%= escuela.fechaDeCreacion.toISOString().split('T')[0] %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Número de ticket</label>
          <input type="text" value="<%= escuela.numeroTicket %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Estado del caso</label>
          <input type="text" 
                 value="<%= escuela.estado %>" 
                 disabled 
                 class="w-full border px-3 py-2 rounded-lg text-sm font-semibold text-center 
                        <%= escuela.estado === 'Abierto' ? 'text-green-700 bg-green-100 border-green-300' : 'text-red-700 bg-red-100 border-red-300' %>" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Nombre de la escuela</label>
          <input type="text" value="<%= escuela.nombre %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">CUE</label>
          <input type="text" value="<%= escuela.cue %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Provincia</label>
          <input type="text" value="<%= escuela.provincia %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Departamento</label>
          <input type="text" value="<%= escuela.departamento %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Ciudad</label>
          <input type="text" value="<%= escuela.ciudad %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Dirección</label>
          <input type="text" value="<%= escuela.direccion %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Proveedor</label>
          <input type="text" value="<%= escuela.proveedor %>" disabled class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm" />
        </div>
      </div>
  
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700">Detalle del caso</label>
        <textarea disabled rows="4" class="w-full border px-3 py-2 rounded-lg bg-gray-100 text-sm resize-none"><%= escuela.detalleDelCaso %></textarea>
      </div>
  
      <!-- Botón Volver -->
      <div class="text-center">
        <a href="/escuelas/dashboard" class="inline-block bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-800 transition">
          Volver al listado
        </a>
      </div>
    </div>
  </main>