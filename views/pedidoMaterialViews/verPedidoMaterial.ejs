<main class="bg-gray-100 min-h-screen py-10 px-4">
  <div class="max-w-5xl mx-auto bg-white p-8 rounded-2xl shadow-xl border border-gray-300">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Detalle del Pedido de Materiales</h1>

    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <div>
        <p class="text-sm text-gray-500">Número de pedido</p>
        <p class="text-lg font-semibold text-gray-800">
          <%= pedido.numeroPedido %>
        </p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Fecha</p>
        <p class="text-lg font-semibold text-gray-800">
          <%= new Date(pedido.fecha).toLocaleDateString("es-AR") %>
        </p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Área solicitante</p>
        <p class="text-lg font-semibold text-gray-800">
          <%= pedido.areaSolicitante %>
        </p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Proyecto</p>
        <p class="text-lg font-semibold text-gray-800">
          <%= pedido.proyecto %>
        </p>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full border text-sm mb-4">
        <thead class="bg-gray-200 text-gray-700 text-center">
          <tr>
            <th class="border px-2 py-2 w-16">Ítem</th>
            <th class="border px-3 py-2">Detalle</th>
            <th class="border px-2 py-2 w-[200px]">Dato Técnico</th>
            <th class="border px-2 py-2 w-20">Cant.</th>
          </tr>
        </thead>
        <tbody>
          <% pedido.items.forEach((item, i)=> { %>
            <tr>
              <td class="border px-2 py-2 text-center font-medium">
                <%= i + 1 %>
              </td>
              <td class="border px-3 py-2">
                <%= item.detalle %>
              </td>
              <td class="border px-3 py-2">
                <%= item.datoTecnico %>
              </td>
              <td class="border px-2 py-2 text-center">
                <%= item.cantidad %>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>

    <div class="grid md:grid-cols-2 gap-6 mb-6">
      <% if (pedido.creadoPor) { %>
        <div>
          <p class="text-sm text-gray-500">Creado por</p>
          <p class="text-base font-medium text-gray-800">
            <%= pedido.creadoPor %>
          </p>
        </div>
        <% } %>
          <% if (pedido.editadoPor) { %>
            <div>
              <p class="text-sm text-gray-500">Editado por</p>
              <p class="text-base font-medium text-gray-800">
                <%= pedido.editadoPor %>
              </p>
            </div>
            <% } %>
    </div>

    <div class="text-center">
      <a href="/pedidos-materiales/dashboard"
        class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-800 transition">
        Volver al listado
      </a>
    </div>
  </div>
</main>