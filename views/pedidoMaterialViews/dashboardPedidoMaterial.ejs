<main class="bg-gray-100 min-h-screen py-10 px-4">
  <div class="max-w-7xl mx-auto bg-white p-8 rounded-2xl shadow-xl border border-gray-300">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Pedidos de Materiales</h1>
      <a href="/pedidos-materiales/crear"
        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-800 transition">
        Nuevo pedido
      </a>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full border text-sm">
        <thead class="bg-gray-200 text-gray-700">
          <tr>
            <th class="border px-3 py-2">N° Pedido</th>
            <th class="border px-3 py-2">Fecha</th>
            <th class="border px-3 py-2">Área</th>
            <th class="border px-3 py-2">Proyecto</th>
            <th class="border px-3 py-2">Creado por</th>
            <th class="border px-3 py-2">Editado por</th>
            <th class="border px-3 py-2">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (pedidos.length===0) { %>
            <tr>
              <td colspan="7" class="text-center py-4 text-gray-500">No hay pedidos cargados</td>
            </tr>
            <% } else { %>
              <% pedidos.forEach(p=> { %>
                <tr>
                  <td class="border px-3 py-2 text-center">
                    <%= p.numeroPedido %>
                  </td>
                  <td class="border px-3 py-2 text-center">
                    <%= new Date(p.fecha).toLocaleDateString("es-AR") %>
                  </td>
                  <td class="border px-3 py-2">
                    <%= p.areaSolicitante %>
                  </td>
                  <td class="border px-3 py-2">
                    <%= p.proyecto %>
                  </td>
                  <td class="border px-3 py-2">
                    <%= p.creadoPor || "-" %>
                  </td>
                  <td class="border px-3 py-2">
                    <%= p.editadoPor || "-" %>
                  </td>
                  <td class="border px-3 py-2 text-center space-x-2">
                    <a href="/pedidos-materiales/<%= p._id %>/ver" class="text-blue-600 hover:underline">Ver</a>
                    <a href="/pedidos-materiales/<%= p._id %>/editar" class="text-yellow-600 hover:underline">Editar</a>
                    <a href="/pedidos-materiales/pdf/<%= p._id %>" target="_blank"
                      class="text-green-600 hover:underline">PDF</a>
                    <form action="/pedidos-materiales/<%= p._id %>/eliminar" method="POST" class="inline">
                      <button type="submit" class="text-red-600 hover:underline"
                        onclick="return confirm('¿Seguro que deseas eliminar este pedido?')">
                        Eliminar
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
                  <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>