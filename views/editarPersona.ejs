<div class="bg-gray-100 min-h-screen py-10 px-4">
  <div class="bg-white p-8 rounded-2xl shadow-xl max-w-md mx-auto">
    <h1 class="text-2xl text-center text-gray-800 mb-6">Editar Personal</h1>

    <form action="/personas/editar/<%= persona._id %>?_method=PUT" method="POST" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">Número de Orden</label>
        <input type="number" name="numeroOrden" required class="w-full border px-3 py-2 rounded-lg"
               value="<%= persona.numeroOrden %>">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Legajo</label>
        <input type="text" name="legajo" required class="w-full border px-3 py-2 rounded-lg"
               value="<%= persona.legajo %>">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Nombre y Apellido</label>
        <input type="text" name="nombreApellido" required class="w-full border px-3 py-2 rounded-lg"
               value="<%= persona.nombreApellido %>">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">DNI</label>
        <input type="text" name="dni" required class="w-full border px-3 py-2 rounded-lg"
               value="<%= persona.dni %>">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Cargo</label>
        <input type="text" name="cargo" required class="w-full border px-3 py-2 rounded-lg"
               value="<%= persona.cargo %>">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Módulos Permitidos</label>
        <div class="flex flex-col gap-2">
          <label><input type="checkbox" name="modulosPermitidos" value="viaticos"
            <%= persona.modulosPermitidos.includes('viaticos') ? 'checked' : '' %>> Viáticos</label>
          <label><input type="checkbox" name="modulosPermitidos" value="materiales"
            <%= persona.modulosPermitidos.includes('materiales') ? 'checked' : '' %>> Pedido de Materiales</label>
          <label><input type="checkbox" name="modulosPermitidos" value="stock"
            <%= persona.modulosPermitidos.includes('stock') ? 'checked' : '' %>> Control de Stock</label>
        </div>
      </div>

      <div class="text-center pt-4">
        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-800 transition">
          Guardar Cambios
        </button>
      </div>
    </form>
  </div>
</div>