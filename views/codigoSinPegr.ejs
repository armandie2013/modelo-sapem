const adicionalInput = document.getElementById("adicionalEnEfectivo");

// Reemplazar punto por coma al presionar tecla
adicionalInput.addEventListener("keydown", function (e) {
  if (e.key === ".") {
    e.preventDefault();
    const cursor = this.selectionStart;
    const before = this.value.slice(0, cursor);
    const after = this.value.slice(cursor);
    this.value = before + "," + after;
    this.setSelectionRange(cursor + 1, cursor + 1);
  }
});

// Formatear en tiempo real permitiendo dos decimales
